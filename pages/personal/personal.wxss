.container{
  height: 100vh;
  background-color: #f2f2f2;
}

.user-info{
  background-color: #fff;
}

.img{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx auto;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 50rpx rgba(0, 0, 0, .2);
}

image{
  width: 100%;
  height: 100%;
}

.user-name{
  display: inline-block;
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
}

.wallet{
  height: 40rpx;
  padding: 20rpx; 
  background-color: #fff;
  margin: 20rpx 0;
}

.wallet text:last-child{
  float: right;
}

.btn{
  margin: 20rpx 0;
  width: 100%;
  height: 100rpx;
  padding: 10rpx; 
  text-align: center;
  line-height: 80rpx;
  font-size: 48rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}